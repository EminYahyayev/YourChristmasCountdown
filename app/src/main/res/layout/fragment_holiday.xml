<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/holiday_background"
            android:contentDescription="@null"
            android:scaleType="centerCrop"/>

        <uk.co.friendlycode.yourchristmascountdown.ui.widget.ChristmasTextView
            android:id="@+id/holiday_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="@string/holiday_title"
            android:shadowRadius="1"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="@color/holiday_title"
            android:textStyle="bold"
            app:fontName="@string/font_name"/>

        <include layout="@layout/partial_side_buttons"/>

    </FrameLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:adSize="@string/countdown_ad_banner_size"
        app:adUnitId="@string/banner_ad_unit_id"/>

</LinearLayout>