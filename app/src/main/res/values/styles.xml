<resources>

    <style name="TimerFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TimerGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:alignmentMode">alignMargins</item>
        <item name="android:columnOrderPreserved">false</item>
        <item name="columnCount">2</item>
    </style>

    <style name="CountdownTimerView">
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="layout_gravity">center_horizontal</item>
        <item name="layout_columnWeight">1</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_marginLeft">@dimen/content_padding_normal</item>
        <item name="android:layout_marginRight">@dimen/content_padding_normal</item>
        <item name="android:background">@null</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontPath">@string/font_name</item>
    </style>

    <style name="CountdownTimerView.Number">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">@color/material_white</item>
        <item name="android:layout_marginBottom">-16sp</item>
    </style>

    <style name="CountdownTimerView.Caption">
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">@color/countdown_timer_caption</item>
    </style>

    <style name="AboutButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/about_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/content_padding_normal</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

</resources>
